syntax on
set tabstop=8
set shiftwidth=4
set expandtab
set viminfo='20,\"5000
set history=5000
set hlsearch
set novisualbell
set background=dark
set backspace=eol,indent,start
set nowrap
set number
set laststatus=2

" Switch off all auto-indenting
set nocindent
set nosmartindent
set noautoindent
set indentexpr=
filetype indent off
filetype plugin indent off
